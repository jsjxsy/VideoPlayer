<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_windows_screen"
                android:orientation="vertical">
    <!-- <View 
        android:layout_height="48dp"
        android:layout_width="fill_parent" /> -->
    <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_network_unavailable"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="30dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/common_error"
                android:textColor="@color/color_value_9"
                android:textSize="14sp"/>

        <Button
                android:id="@+id/id_refresh_network_unavailable_tips"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button"
                android:text="@string/click_and_refresh"
                android:textColor="@color/color_value_6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>

