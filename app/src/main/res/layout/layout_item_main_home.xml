<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/button_home_cell"
    tools:context=".activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_item_common"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/id_img_item_movie"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            tools:src="@drawable/movie1" />

        <TextView
            android:id="@+id/id_text_view_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/bg_orange_common"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="9.8" />

        <TextView
            android:id="@+id/id_text_view_movie_type"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/id_img_item_movie"
            android:layout_alignRight="@id/id_img_item_movie"
            android:background="@color/blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="BD" />

        <TextView
            android:id="@+id/id_name_item_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_img_item_movie"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/color_value_3"
            android:textSize="16sp"
            android:typeface="normal"
            tools:text="你的名字" />

        <TextView
            android:id="@+id/id_description_item_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_name_item_movie"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/color_value_9"
            android:textSize="14sp"
            tools:text="这是一个讲述xx的故事aaaa" />
    </RelativeLayout>


</FrameLayout>