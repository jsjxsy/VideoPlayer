<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alibaba.intl.android.picture.widget.GestureViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/id_image_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#e6333333"
        android:clickable="false"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/id_back_ctrl_header_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:clickable="false"
            android:gravity="center"
            android:src="@drawable/ic_back_arrow"
            android:textColor="@color/color_title" />

        <ImageButton
            android:id="@+id/id_check_ctrl_header_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_photo_big_unchecked"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_image_footer_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#e6333333"
        android:padding="8dp">

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/common_ok"
            android:minWidth="40dp"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/send_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/send"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:text="1" />
    </RelativeLayout>

</RelativeLayout>