<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88DCDCDC">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="80dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vodplayer_setting_tvHead"
                android:layout_width="520dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dip"
                android:text="标题头"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:visibility="gone" />

            <player.setting.util.LeEditText
                android:id="@+id/vodplayer_setting_leSkipTime"
                android:layout_width="520dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/vodplayer_setting_tvHead"
                android:layout_gravity="center"
                android:cursorVisible="false"
                android:digits="0123456789"
                android:maxLines="1"
                android:text="00:00:00"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/vodplayer_setting_iv_Up_Ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vodplayer_setting_up_ico"
            android:visibility="invisible" />
    </FrameLayout>

    <ListView
        android:id="@+id/vodplayer_setting_lvOptions"
        android:layout_width="520dip"
        android:layout_height="720dip"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/vodplayer_setting_listitem"
        android:listSelector="@drawable/vodplayer_setting_listitem_background"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/vodplayer_setting_iv_Down_Ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="105dip"
        android:layout_marginTop="40dip"
        android:src="@drawable/vodplayer_setting_down_ico"
        android:visibility="gone" />
</FrameLayout>

